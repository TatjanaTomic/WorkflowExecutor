<UserControl x:Class="CreatorMVVMProject.View.Main.StepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:CreatorMVVMProject.Model.Class.Converters"
             xmlns:main="clr-namespace:CreatorMVVMProject.ViewModel.Main"
             d:DataContext="{d:DesignInstance Type=main:StepViewModel}"
             mc:Ignorable="d" 
            >
    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="statusToColorConverter"/>
        <converters:StatusToEnabledConverter x:Key="statusToEnabledConverter"/>
    </UserControl.Resources>

    <Grid>
        <Expander IsExpanded="{Binding IsExpanded}" Margin="10,10,10,10" Background="{StaticResource DarkColorBrush}" >
            <!--<Expander.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0.9,1">
                    <GradientStop Color="#9e77c7" Offset="0"/>
                    <GradientStop Color="#9e77c7" Offset="0"/> 
                </LinearGradientBrush>
            </Expander.Background>-->
            <Expander.Header>
                <DockPanel>
                    <Image Source="../../Icons/upload_23968.png" Height="50" Width="50" RenderTransformOrigin="0.5,0.5"/>
                    <TextBlock Margin="20,0,0,0" Text="{Binding StepId}" FontSize="18" Foreground="WhiteSmoke" FontWeight="Bold"></TextBlock>
                </DockPanel>
            </Expander.Header>
            <Expander.Content>
                <Grid Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" ></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Status}" Background="{Binding Status, Converter={StaticResource statusToColorConverter}, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding StepDescription}" TextWrapping="Wrap" Foreground="WhiteSmoke"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Message}" TextWrapping="Wrap"  Foreground="WhiteSmoke"></TextBlock>

                    <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" 
                                    Content="Execute till this step"
                                    Command="{Binding StartStepCommand}"
                                    VerticalAlignment="Top"
                                    IsEnabled="{Binding IsButtonEnabled}"
                                    Style="{StaticResource PurpleButtonStyle}"
                                    Height="30"
                                    MinWidth="110"
                                    Margin="20,0,10,0"
                                    />

                        <CheckBox Grid.Column="3" HorizontalAlignment="Right"
                                      IsEnabled="{Binding CanBeSelected}"
                                      IsChecked="{Binding IsSelected}"
                                      Content="Select step"
                                      VerticalAlignment="Top"
                                      Height="30"
                                      Foreground="WhiteSmoke"
                                      Margin="10,0,20,0" 
                                      />
                    </Grid>
                </Grid>
            </Expander.Content>
        </Expander>
    </Grid>
</UserControl>
